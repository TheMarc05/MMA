@model BackENDiTEC.Models.Product
@{
    ViewData["Title"] = "Create/Edit Product";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="SaveProduct" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label asp-for="Name">Product Name</label>
            <input asp-for="Name" class="form-control" required maxlength="100" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" maxlength="500"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ImageUrl">Image URL</label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="HoverImageUrl">Hover Image URL</label>
            <input asp-for="HoverImageUrl" class="form-control" />
            <span asp-validation-for="HoverImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ProductStyle">Product Style</label>
            <input asp-for="ProductStyle" class="form-control" />
            <span asp-validation-for="ProductStyle" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Material">Material</label>
            <input asp-for="Material" class="form-control" />
            <span asp-validation-for="Material" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Color">Color</label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col">
                <h4 class="mt-3 mb-3">Size Quantities</h4>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <div class="form-group mb-3">
                    <label asp-for="XS">XS Quantity</label>
                    <input asp-for="XS" class="form-control" type="number" min="0" />
                    <span asp-validation-for="XS" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group mb-3">
                    <label asp-for="S">S Quantity</label>
                    <input asp-for="S" class="form-control" type="number" min="0" />
                    <span asp-validation-for="S" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group mb-3">
                    <label asp-for="M">M Quantity</label>
                    <input asp-for="M" class="form-control" type="number" min="0" />
                    <span asp-validation-for="M" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group mb-3">
                    <label asp-for="L">L Quantity</label>
                    <input asp-for="L" class="form-control" type="number" min="0" />
                    <span asp-validation-for="L" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group mb-3">
                    <label asp-for="XL">XL Quantity</label>
                    <input asp-for="XL" class="form-control" type="number" min="0" />
                    <span asp-validation-for="XL" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group mb-3">
                    <label asp-for="ShoeSize">Shoe Quantity</label>
                    <input asp-for="ShoeSize" class="form-control" type="number" min="0" />
                    <span asp-validation-for="ShoeSize" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
